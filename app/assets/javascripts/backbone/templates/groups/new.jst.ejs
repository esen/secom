<div class="page-header">
  <h1>New Group</h1>
</div>


<form id="new-group" name="group" class='form-horizontal'>
    <div class="control-group">
        <label for="name" class="control-label"> name:</label>
            <div class="controls">
                <input type="text" class="text_field" name="name" id="name" value="<%= name %>" >
            </div>
    </div>

    <div class="control-group">
        <label for="level_id" class="control-label"> level:</label>
            <div class="controls">
                <select name="level_id" id="level_id">
                </select>
            </div>
    </div>

    <div class="form-actions">
        <a href="#/index" class="btn btn-small">Back</a>
        <input type="submit" value="Add Group" class="btn btn-small btn-primary"/>
    </div>

</form>