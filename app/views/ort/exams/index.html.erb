<%- model_class = Ort::Exam -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Name</th>
      <th>Name</th>
      <th>Name</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Start Date</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= link_to exam.name, ort_exam_path(exam) %></td>
        <td><%= exam.exam_type2.name if exam.exam_type2_id %></td>
        <td><%= exam.exam_type3.name if exam.exam_type3_id %></td>
        <td><%= exam.exam_type4.name if exam.exam_type4_id %></td>
        <td><%= exam.exam_type5.name if exam.exam_type5_id %></td>
        <td><%= exam.cost %></td>
        <td><%=l exam.start_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ort_exam_path(exam), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ort_exam_path(exam),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ort_exam_path,
            :class => 'btn btn-primary' %>
