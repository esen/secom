<%- model_class = Ort::Participant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= "Name" %>:</strong></dt>
  <dd><%= @participant.name %></dd>
  <br/>
  <dt><strong>More:</strong></dt>
  <dd>
    <%= link_to "Exams", exams_ort_participant_path(@participant), :class => "btn btn-small" %>
    <%= link_to "Payments", ort_participant_payments_path(@participant), :class => "btn btn-small" %>
  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ort_participants_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ort_participant_path(@participant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ort_participant_path(@participant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
