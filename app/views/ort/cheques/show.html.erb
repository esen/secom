<%- model_class = Ort::Cheque -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Participant:</strong></dt>
  <dd><%= link_to @cheque.participant.name, @cheque.participant %></dd>
  <dt><strong>Exam:</strong></dt>
  <dd><%= link_to "#{@cheque.exam.name} (#{@cheque.exam.start_date})", @cheque.exam %></dd>
  <dt><strong>Mark:</strong></dt>
  <dd><%= @cheque.mark %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              exams_ort_participant_path(@cheque.participant), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ort_cheque_path(@cheque), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ort_cheque_path(@cheque),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
