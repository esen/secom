<%= form_for @cheque, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="control-group">
      <%= f.label :participant, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :participant, :class => 'text_field' %>
      </div>
    </div>


    <div class="control-group">
      <%= label_tag :exam_name, "Exam Name", :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :exam_name, params[:exam_name], :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :exam_date, "Exam Date", :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :exam_date, params[:exam_date], :class => 'text_field' %>
      </div>
    </div>


    <% if @cheque.new_record? %>
        <div class="control-group">
          <%= label_tag :payment_amount, "Payed Amount", :class => 'control-label' %>
          <div class="controls">
            <%= text_field_tag :payment_amount, params[:payment_amount], :class => 'text_field' %>
          </div>
        </div>
    <% else %>
        <div class="control-group">
          <%= f.label :mark, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :mark, :class => 'text_field' %>
          </div>
        </div>
    <% end %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  ort_cheques_path, :class => 'btn' %>
    </div>
<% end %>
