<h1>Listing attendances</h1>

<table>
  <tr>
    <th>Branch</th>
    <th>Student</th>
    <th>Course</th>
    <th>Attended</th>
    <th>Percentage</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attendances.each do |attendance| %>
  <tr>
    <td><%= attendance.branch_id %></td>
    <td><%= attendance.student_id %></td>
    <td><%= attendance.course_id %></td>
    <td><%= attendance.attended %></td>
    <td><%= attendance.percentage %></td>
    <td><%= link_to 'Show', attendance %></td>
    <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
    <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

