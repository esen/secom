<%= form_for(@branch, {:html => {:class => 'form-horizontal'}}) do |f| %>
    <div class="control-group">
      <%= f.label :name, "Атылышы", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :address, "Адреси", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :address %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Жаңы филиалды кош", :class => "btn btn-small btn-primary" %>
    </div>
<% end %>
