<div class="page-header">
  <h1>Филиалдар</h1>
</div>


<table id="levels-table" class="table table-bordered table-hover">
  <tr>
    <th>Аталышы</th>
    <th>Адреси</th>
    <th></th>
    <th></th>
  </tr>
  <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.address %></td>
        <td><%= link_to 'өзгөртүү', edit_branch_path(branch), :class => "btn btn-small" %></td>
        <td><%= link_to 'өчүр', branch, method: :delete, data: { confirm: 'Филиал өчүрүлсүнбү?' }, :class => "btn btn-small btn-danger" %></td>
      </tr>
  <% end %>
</table>

